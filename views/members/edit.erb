
<h2>Edit <%= @member.first_name %> <%= @member.last_name %></h2>
<form method="POST" action="/members/<%= @member.id %>">


    <div>
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @member.first_name %>"/>
    </div>

    <div>
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name" value="<%= @member.last_name%>"/>
    </div>

    <div>
      <label for="gym_class_select">Select Gym Class:</label>
      <select name="gym_class_id" id="gym_class_select" selected="<%= @member.gym_classes  %>">
        <% @gym_class.each do |gym_class| %>
          <% if gym_class.id == @member.gym_classes %>
            <option value=<%= gym_class.id %> selected><%= gym_class.title %></option>
          <% else %>
            <option value=<%= gym_class.id %>><%= gym_class.title %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div>
      <label for="age">Age:</label>
      <input type="number" name="age" id="age" value="<%= @member.age %>"/>
    </div>

    <div>
      <input class="btn" type="submit" value="Enrol Member"/>
    </div>


</form>
