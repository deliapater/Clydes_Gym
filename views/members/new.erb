<h2>Enrol Member</h2>
<form method="POST" action="/members">
  <div>

    <div>
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name"/>
    </div>

    <div>
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name"/>
    </div>

    <div>
      <label for="gym_class_select">Select Gym Class:</label>
      <select name="gym_class_id" id="gym_class_select">
        <% @gym_class.each do |gym_class| %>
            <option value=<%= gym_class.id %>><%= gym_class.title %></option>
        <% end %>
      </select>
    </div>

    <div>
      <label for="age">Age:</label>
      <input type="number" name="age" id="age"/>
    </div>

    <div>
      <input type="submit" value="Enrol Member"/>
    </div>

  </div>
